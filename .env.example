# Environment variables for Austin Move Finder

# Cloudflare Turnstile Security
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here
PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAAkZ8XyLwqKhHBLu

# Business Configuration
BUSINESS_EMAIL=quotes@austinmovefinder.com

# Email Service Configuration (choose one)
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@austinmovefinder.com

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# Database (optional for data persistence)
DATABASE_URL=your_database_connection_string_here

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=your_ga_id_here
FACEBOOK_PIXEL_ID=your_fb_pixel_id_here

# Rate Limiting
MAX_SUBMISSIONS_PER_IP=10
RATE_LIMIT_WINDOW_MINUTES=60

# Development
NODE_ENV=development