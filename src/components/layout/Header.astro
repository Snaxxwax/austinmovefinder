---
import MobileMenu from '../ui/MobileMenu.astro';

// Get current path for active link styling
const currentPath = Astro.url.pathname;
---

<header>
  <div class="container">
    <a href="/" class="logo-link" aria-label="Austin Move Finder Home">
      <picture>
        <source srcset="/logo.webp" type="image/webp">
        <img src="/logo.png" alt="Austin Move Finder - Your trusted moving partner in Austin" class="logo" loading="eager" decoding="async">
      </picture>
    </a>

    <!-- Desktop Navigation -->
    <nav class="main-nav" aria-label="Main navigation">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
      <a href="/quote" class={currentPath === '/quote' ? 'active' : ''}>Get Quotes</a>
      <a href="/blog" class={currentPath.startsWith('/blog') ? 'active' : ''}>Blog</a>
    </nav>

    <!-- Mobile Menu Toggle -->
    <button
      id="mobile-menu-toggle"
      class="mobile-menu-toggle"
      aria-label="Open menu"
      aria-expanded="false"
      type="button"
    >
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>
</header>

<!-- Mobile Menu Component -->
<MobileMenu currentPath={currentPath} />

<!-- Mobile Menu Script -->
<script src="/src/scripts/mobile-menu.js"></script>

<style>
  header {
    padding-block: 14px;
    background: #fff;
    border-bottom: 1px solid #eee;
  }

  header .container {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    column-gap: 24px;
  }

  .logo,
  .logo {
    display: block;
    height: var(--logo-max-height, 70px);
    width: auto;
  }

  .logo-link {
    display: block;
  }

  .main-nav {
    justify-self: end;
    display: flex;
    gap: 28px;
    align-items: center;
  }

  .main-nav a {
    display: inline-block;
    padding: 6px 0;
    text-decoration: none;
    color: var(--text-color);
    font-weight: 600;
    transition: color .2s ease;
  }

  .main-nav a:hover,
  .main-nav a.active {
    color: var(--accent-color);
  }

  /* Mobile Menu Toggle Button */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 48px;
    height: 48px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 12px;
    z-index: 10;
    justify-self: end;
  }

  .hamburger-line {
    width: 24px;
    height: 3px;
    background-color: var(--primary-color);
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    transform-origin: center;
  }

  /* Hamburger to X animation */
  .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  .mobile-menu-toggle:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    header .container {
      grid-template-columns: auto 1fr auto;
      column-gap: 16px;
    }

    .main-nav {
      display: none; /* Hide desktop nav on mobile */
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .logo {
      height: 50px;
    }
  }

  @media (max-width: 480px) {
    .logo {
      height: 45px;
    }
  }
</style>