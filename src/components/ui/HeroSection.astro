---
export interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const {
  title,
  subtitle,
  ctaText = "Get Free Moving Quotes",
  ctaLink = "/quote",
  backgroundImage = "/hero-background.png"
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1>{title}</h1>
      <p>{subtitle}</p>
      {ctaText && <a href={ctaLink} class="cta-button">{ctaText}</a>}
    </div>
  </div>
</section>

<style>
  .hero {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/hero-background.png');
    background-size: cover;
    background-position: center;
    color: #fff;
    text-align: center;
    padding: 6rem 0;
  }

  .hero-content h1 {
    font-family: var(--heading-font);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: #fff;
  }

  .hero-content p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    background-color: var(--accent-color);
    color: #fff;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .cta-button:hover {
    background-color: var(--accent-hover-color);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-content p {
      font-size: 1rem;
    }
  }
</style>