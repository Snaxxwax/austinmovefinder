---
// Mobile menu drawer component with slide-in animation
const currentPath = Astro.url.pathname;
---

<div class="mobile-menu-overlay" id="mobileMenuOverlay" aria-hidden="true">
  <nav
    class="mobile-menu-drawer"
    id="mobileMenuDrawer"
    role="dialog"
    aria-modal="true"
    aria-label="Mobile navigation"
  >
    <div class="mobile-menu-header">
      <h2 class="sr-only">Navigation Menu</h2>
      <button
        type="button"
        class="mobile-menu-close"
        id="mobileMenuClose"
        aria-label="Close mobile menu"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="mobile-menu-content">
      <a
        href="/"
        class={`mobile-menu-link ${currentPath === '/' ? 'active' : ''}`}
        data-mobile-nav-link
      >
        <span class="mobile-menu-icon">üè†</span>
        <span>Home</span>
      </a>

      <a
        href="/quote"
        class={`mobile-menu-link ${currentPath === '/quote' ? 'active' : ''}`}
        data-mobile-nav-link
      >
        <span class="mobile-menu-icon">üìã</span>
        <span>Get Quotes</span>
      </a>

      <a
        href="/blog"
        class={`mobile-menu-link ${currentPath.startsWith('/blog') ? 'active' : ''}`}
        data-mobile-nav-link
      >
        <span class="mobile-menu-icon">üìù</span>
        <span>Blog</span>
      </a>
    </div>
  </nav>
</div>

<style>
  /* Screen reader only class */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Overlay backdrop */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 300ms cubic-bezier(0.4, 0, 0.2, 1),
                visibility 300ms cubic-bezier(0.4, 0, 0.2, 1);
    -webkit-tap-highlight-color: transparent;
  }

  .mobile-menu-overlay[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
  }

  /* Drawer panel */
  .mobile-menu-drawer {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 280px;
    max-width: 85vw;
    background-color: #fff;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 300ms cubic-bezier(0.4, 0, 0.2, 1);
    overscroll-behavior: contain;
  }

  .mobile-menu-overlay[aria-hidden="false"] .mobile-menu-drawer {
    transform: translateX(0);
  }

  /* Header with close button */
  .mobile-menu-header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 16px;
    border-bottom: 1px solid #eee;
  }

  .mobile-menu-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border: none;
    background: transparent;
    color: var(--text-color);
    cursor: pointer;
    border-radius: 8px;
    transition: background-color 200ms ease, color 200ms ease;
    -webkit-tap-highlight-color: transparent;
  }

  .mobile-menu-close:hover {
    background-color: var(--secondary-color, #f8f9fa);
    color: var(--accent-color);
  }

  .mobile-menu-close:focus-visible {
    outline: var(--focus-ring-width, 3px) solid var(--focus-ring-color, #f9a826);
    outline-offset: 2px;
  }

  /* Menu content */
  .mobile-menu-content {
    flex: 1;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    padding: 8px;
  }

  /* Menu links */
  .mobile-menu-link {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    margin-bottom: 4px;
    text-decoration: none;
    color: var(--text-color);
    font-weight: 600;
    font-size: 16px;
    border-radius: 8px;
    transition: background-color 200ms ease, color 200ms ease;
    min-height: 48px;
    -webkit-tap-highlight-color: transparent;
  }

  .mobile-menu-link:hover {
    background-color: var(--secondary-color, #f8f9fa);
    color: var(--accent-color);
  }

  .mobile-menu-link:focus-visible {
    outline: var(--focus-ring-width, 3px) solid var(--focus-ring-color, #f9a826);
    outline-offset: -2px;
  }

  .mobile-menu-link.active {
    background-color: rgba(249, 168, 38, 0.1);
    color: var(--accent-color);
  }

  .mobile-menu-icon {
    font-size: 24px;
    line-height: 1;
    flex-shrink: 0;
  }

  /* Prevent body scroll when menu is open */
  :global(body.mobile-menu-open) {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 100%;
  }

  /* Disable on desktop */
  @media (min-width: 769px) {
    .mobile-menu-overlay {
      display: none;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .mobile-menu-overlay,
    .mobile-menu-drawer,
    .mobile-menu-link,
    .mobile-menu-close {
      transition-duration: 0.01ms !important;
    }
  }
</style>