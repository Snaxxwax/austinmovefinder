---
import type { SEOConfig } from '@/config/seo';
import { AUSTIN_SEO_CONFIG, generateSchemaOrg } from '@/config/seo';

export interface Props extends SEOConfig {
  url?: string;
}

const {
  title,
  description,
  canonical,
  image,
  type = 'website',
  noindex = false,
  keywords = [],
  localBusiness,
  breadcrumbs,
  faq,
  service,
  url
} = Astro.props;

// Generate canonical URL
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;

// Generate social image URL
const socialImage = image
  ? new URL(image, Astro.site).href
  : new URL(AUSTIN_SEO_CONFIG.defaultImage, Astro.site).href;

// Combine keywords with Austin-specific keywords
const allKeywords = [
  ...AUSTIN_SEO_CONFIG.keywords,
  ...keywords
].join(', ');

// Generate structured data
const structuredData = generateSchemaOrg({
  title,
  description,
  canonical: canonicalURL,
  image: socialImage,
  type,
  keywords: [...AUSTIN_SEO_CONFIG.keywords, ...keywords],
  localBusiness: localBusiness || AUSTIN_SEO_CONFIG.localBusiness,
  breadcrumbs,
  faq,
  service
});

// Page-specific title with site name
const fullTitle = title.includes(AUSTIN_SEO_CONFIG.siteName)
  ? title
  : `${title} | ${AUSTIN_SEO_CONFIG.siteName}`;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle}>
<meta name="description" content={description}>
<meta name="keywords" content={allKeywords}>
<link rel="canonical" href={canonicalURL}>

<!-- Robots Meta -->
{noindex ? (
  <meta name="robots" content="noindex, nofollow">
) : (
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
)}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type}>
<meta property="og:url" content={canonicalURL}>
<meta property="og:title" content={fullTitle}>
<meta property="og:description" content={description}>
<meta property="og:image" content={socialImage}>
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:site_name" content={AUSTIN_SEO_CONFIG.siteName}>
<meta property="og:locale" content="en_US">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content={canonicalURL}>
<meta property="twitter:title" content={fullTitle}>
<meta property="twitter:description" content={description}>
<meta property="twitter:image" content={socialImage}>

<!-- Additional Meta Tags for Local SEO -->
<meta name="geo.region" content="US-TX">
<meta name="geo.placename" content="Austin">
<meta name="geo.position" content="30.266667;-97.733333">
<meta name="ICBM" content="30.266667, -97.733333">

<!-- Apple Meta Tags -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="default">
<meta name="apple-mobile-web-app-title" content={AUSTIN_SEO_CONFIG.siteName}>

<!-- Microsoft Meta Tags -->
<meta name="msapplication-TileColor" content="#1A3A5A">
<meta name="theme-color" content="#1A3A5A">

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

<!-- Preconnect for Performance -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="dns-prefetch" href="https://challenges.cloudflare.com">
<link rel="dns-prefetch" href="https://static.cloudflareinsights.com">

<!-- Critical Resource Preloads -->
<link rel="preload" href="/hero-background.webp" as="image" type="image/webp">
<link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap">
</noscript>

<!-- Alternate language declarations (if applicable) -->
<link rel="alternate" hreflang="en-us" href={canonicalURL}>
<link rel="alternate" hreflang="x-default" href={canonicalURL}>

<!-- Publisher Information -->
<link rel="publisher" href="https://www.facebook.com/austinmovefinder">

<!-- Contact Information -->
<meta name="contact" content="hello@austinmovefinder.com">
<meta name="author" content={AUSTIN_SEO_CONFIG.siteName}>

<!-- Copyright -->
<meta name="copyright" content={`Â© ${new Date().getFullYear()} ${AUSTIN_SEO_CONFIG.siteName}. All rights reserved.`}>

<!-- Page Generation Info -->
<meta name="generator" content={Astro.generator}>
<meta name="build-date" content={new Date().toISOString()}>