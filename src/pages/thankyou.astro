---
import BaseLayout from '@/components/layout/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

const pageTitle = "Thank You - Austin Move Finder";
const pageDescription = "Thank you for requesting quotes from Austin Move Finder. Our partner moving companies will contact you soon with competitive quotes.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main>
    <section class="thank-you-section">
      <div class="container">
        <div class="thank-you-content">
          <div class="success-icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" stroke="#28a745" stroke-width="2" fill="#f8fff9"/>
              <path d="m9 12 2 2 4-4" stroke="#28a745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          <h1>Thank You for Your Request!</h1>
          <p class="subtitle">Your moving quote request has been successfully submitted.</p>

          <div class="next-steps">
            <h2>What Happens Next?</h2>
            <div class="steps-container">
              <div class="step">
                <div class="step-number">1</div>
                <div class="step-content">
                  <h3>Review & Processing</h3>
                  <p>We're reviewing your request and matching you with qualified Austin movers.</p>
                </div>
              </div>
              <div class="step">
                <div class="step-number">2</div>
                <div class="step-content">
                  <h3>Movers Contact You</h3>
                  <p>3-5 licensed moving companies will contact you within 24 hours with competitive quotes.</p>
                </div>
              </div>
              <div class="step">
                <div class="step-number">3</div>
                <div class="step-content">
                  <h3>Compare & Choose</h3>
                  <p>Compare quotes, services, and reviews to find the perfect mover for your needs.</p>
                </div>
              </div>
            </div>
          </div>

          <div class="important-info">
            <h2>Important Information</h2>
            <ul>
              <li><strong>Response Time:</strong> Expect to hear from movers within 24 hours</li>
              <li><strong>No Obligation:</strong> You're under no obligation to hire any of the companies that contact you</li>
              <li><strong>Licensed Movers:</strong> All our partners are licensed and insured</li>
              <li><strong>Free Service:</strong> Our service is completely free - no hidden fees</li>
            </ul>
          </div>

          <div class="contact-info">
            <h2>Questions?</h2>
            <p>If you have any questions or need assistance, please don't hesitate to contact us:</p>
            <div class="contact-details">
              <div class="contact-item">
                <strong>Phone:</strong> <a href="tel:5125550123">(512) 555-0123</a>
              </div>
              <div class="contact-item">
                <strong>Email:</strong> <a href="mailto:support@austinmovefinder.com">support@austinmovefinder.com</a>
              </div>
            </div>
          </div>

          <div class="action-buttons">
            <a href="/" class="btn-primary">Return to Home</a>
            <a href="/quote" class="btn-secondary">Request Another Quote</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Thank You Section */
  .thank-you-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    min-height: 80vh;
  }

  .thank-you-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .success-icon {
    margin-bottom: 2rem;
  }

  .thank-you-content h1 {
    font-family: var(--heading-font);
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 3rem;
  }

  /* Next Steps */
  .next-steps {
    margin-bottom: 3rem;
    text-align: left;
  }

  .next-steps h2 {
    font-family: var(--heading-font);
    color: var(--primary-color);
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .steps-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .step {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid var(--accent-color);
  }

  .step-number {
    background: var(--primary-color);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .step-content h3 {
    font-family: var(--heading-font);
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .step-content p {
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  /* Important Info */
  .important-info {
    margin-bottom: 3rem;
    text-align: left;
    background: #fff3cd;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #ffeaa7;
  }

  .important-info h2 {
    font-family: var(--heading-font);
    color: var(--primary-color);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .important-info ul {
    list-style: none;
    padding: 0;
  }

  .important-info li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #f0e68c;
  }

  .important-info li:last-child {
    border-bottom: none;
  }

  .important-info strong {
    color: var(--primary-color);
  }

  /* Contact Info */
  .contact-info {
    margin-bottom: 3rem;
    text-align: left;
  }

  .contact-info h2 {
    font-family: var(--heading-font);
    color: var(--primary-color);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .contact-info p {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #666;
  }

  .contact-details {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .contact-item {
    text-align: center;
  }

  .contact-item a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
  }

  .contact-item a:hover {
    color: var(--accent-color);
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    padding: 1rem 2rem;
    border: none;
    border-radius: 6px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-primary {
    background: var(--primary-color);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-hover-color);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: var(--accent-color);
    color: white;
  }

  .btn-secondary:hover {
    background: var(--accent-hover-color);
    transform: translateY(-2px);
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .thank-you-section {
      padding: 2rem 0;
    }

    .thank-you-content {
      padding: 2rem 1rem;
      margin: 0 1rem;
    }

    .thank-you-content h1 {
      font-size: 2rem;
    }

    .contact-details {
      flex-direction: column;
      gap: 1rem;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 300px;
    }
  }
</style>