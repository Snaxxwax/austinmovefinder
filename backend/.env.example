# Austin Move Finder Backend Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Integration
FRONTEND_URL=http://localhost:5173
PRODUCTION_FRONTEND_URL=https://austinmovefinder.pages.dev

# Database
DATABASE_PATH=./data/austinmovefinder.db
BACKUP_PATH=./backups

# Email Configuration (Gmail/SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@austinmovefinder.com
TO_EMAIL=quotes@austinmovefinder.com
BUSINESS_PHONE=(512) 555-MOVE
BUSINESS_EMAIL=hello@austinmovefinder.com

# Alternative Email Services
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAILJS_SERVICE_ID=your_emailjs_service_id
# EMAILJS_TEMPLATE_ID=your_emailjs_template_id
# EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://austinmovefinder.pages.dev

# File Upload
MAX_FILE_SIZE=26214400
MAX_FILES_PER_QUOTE=10
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/quicktime

# AI/Object Detection
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
ENABLE_OBJECT_DETECTION=true
FALLBACK_TO_BASIC_QUOTE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# Austin-Specific Configuration
AUSTIN_BASE_LABOR_RATE=120
AUSTIN_TRUCK_RATE_PER_MILE=1.45
AUSTIN_MINIMUM_CHARGE=250
SEASONAL_PRICING_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/austinmovefinder.log
ENABLE_REQUEST_LOGGING=true

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000

# Backup & Maintenance
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
CLEANUP_OLD_FILES_DAYS=30