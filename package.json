{
  "name": "austin-move-finder-astro",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "format": "prettier --write .",
    "optimize-images": "node scripts/image-optimization.js",
    "deploy": "npm run build && wrangler pages deploy dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "analyze": "npx astro build --mode=analyze",
    "lighthouse": "npm run build && npx lighthouse http://localhost:4321 --output html --output-path lighthouse-report.html",
    "perf-audit": "npm run build && npm run preview & sleep 5 && npm run lighthouse"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.9",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@sendgrid/mail": "^8.1.6",
    "astro": "^5.14.0",
    "mailgun.js": "^12.1.0",
    "nodemailer": "^7.0.7",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.13",
    "zod": "^3.25.76",
    "html-to-text": "^9.0.5",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^1.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "sharp-cli": "^4.2.0",
    "terser": "^5.44.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2",
    "wrangler": "^4.40.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
