---
// Get current path for active link styling
const currentPath = Astro.url.pathname;
---

<header>
  <div class="container">
    <a href="/" class="logo-link" aria-label="Austin Move Finder Home">
      <img src="/logo.png" alt="Austin Move Finder - Your trusted moving partner in Austin" class="logo">
    </a>
    <nav class="main-nav" aria-label="Main navigation">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
      <a href="/quote" class={currentPath === '/quote' ? 'active' : ''}>Get Quotes</a>
      <a href="/blog" class={currentPath.startsWith('/blog') ? 'active' : ''}>Blog</a>
      <a href="/neighborhoods" class={currentPath.startsWith('/neighborhoods') ? 'active' : ''}>Neighborhoods</a>
    </nav>
  </div>
</header>

<style>
  header {
    padding: 1rem 0;
    background: #fff;
    border-bottom: 1px solid #eee;
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
  }

  header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    max-height: var(--logo-max-height, 70px);
    width: auto;
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  .main-nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .main-nav a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 600;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
  }

  .main-nav a:hover,
  .main-nav a.active {
    color: var(--accent-color);
  }

  .main-nav a.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent-color);
    border-radius: 1px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .main-nav {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .logo {
      max-height: 50px;
    }
  }

  @media (max-width: 480px) {
    header .container {
      flex-direction: column;
      gap: 1rem;
    }

    .main-nav {
      width: 100%;
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>