{
  "mcpServers": {
    "cloudflare": {
      "command": "npx",
      "args": ["-y", "@cloudflare/mcp-server-cloudflare", "run", "your_cloudflare_account_id"],
      "transport": "stdio",
      "env": {
        "CLOUDFLARE_API_TOKEN": "your_new_rotated_cloudflare_token",
        "CLOUDFLARE_ACCOUNT_ID": "your_cloudflare_account_id"
      }
    },
    "claude-flow": {
      "command": "npx",
      "args": ["claude-flow", "server"],
      "transport": "stdio",
      "allowedTools": ["flows:list","flows:get","flows:run","flows:stop"]
    },
    "ruv-swarm": {
      "command": "npx",
      "args": ["ruv-swarm", "server"],
      "transport": "stdio",
      "allowedTools": ["swarm:start","swarm:stop","swarm:list"]
    },
    "wiremcp": {
      "command": "node",
      "args": ["/home/lunix/Security/netsec/WireMCP/index.js"],
      "transport": "stdio",
      "allowedTools": [
        "capture_packets","get_summary_stats","get_conversations",
        "check_threats","check_ip_threats","analyze_pcap","extract_credentials"
      ]
    }
  }
}
